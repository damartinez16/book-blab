<%- include('../partials/header') %>
<table id="list"></table>
  <thead>
    <tr>
      <th>Title</th> 
      <th>Author</th>
      <th>Genre</th>
    </tr> <br>
  </thead>
  <tbody>
    <% books.forEach(function(b) { %>
      <tr>
          <br><br>
        <td><strong><%= b.title %></strong></td>&nbsp;
        <td><%= b.author %></td>&nbsp;
        <td><%= b.genre %></td>
        <td><a href="/books/<%= b._id %>">DETAILS</a></td>
        <% if (user && user._id.equals(b.user)) { %>
        <td><a href="/books/<%= b._id %>/edit">EDIT</a></td>
        <% } %>
      </tr>
      <% }); %> 
    </tbody>
  </table>
<%- include('../partials/footer') %>
